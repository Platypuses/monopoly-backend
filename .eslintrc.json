{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/recommended",
    "plugin:node/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "node",
    "import"
  ],
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": [
      "error"
    ],
    "node/no-missing-import": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": [
          "modules",
          "dynamicImport"
        ]
      }
    ]
  }
}
